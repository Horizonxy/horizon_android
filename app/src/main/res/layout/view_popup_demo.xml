<?xml version="1.0" encoding="utf-8"?>
<com.horizon.android.widget.TrianglePopupLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/min_margin">

    <TextView
        android:id="@+id/tv_demo1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:gravity="center"
        android:layout_marginLeft="@dimen/normal_margin"
        android:textSize="@dimen/normal_size"
        android:textColor="@color/main"/>

    <TextView
        android:id="@+id/tv_demo2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:textSize="@dimen/normal_size"
        android:gravity="center"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:textColor="@color/main"/>

</com.horizon.android.widget.TrianglePopupLayout>