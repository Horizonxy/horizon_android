<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout xmlns:xcround="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.horizon.android.widget.XCRoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:src="@mipmap/image"
            xcround:border_color="@color/main"
            xcround:border_width="4px"
            xcround:type="circle" />

        <com.horizon.android.widget.XCRoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:src="@mipmap/image"
            xcround:border_color="@color/main"
            xcround:border_width="4px"
            xcround:round_radius="40px"
            xcround:type="round" />

        <com.horizon.android.widget.XCRoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:src="@mipmap/image"
            xcround:border_color="@color/main"
            xcround:border_width="4px"
            xcround:type="oval" />

        <com.horizon.android.widget.XCRoundImageView
            android:id="@+id/circle_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            xcround:border_color="@color/main"
            xcround:border_width="4px"
            xcround:type="circle" />


        <com.horizon.android.widget.ReflectionImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:src="@mipmap/image" />

        <com.horizon.android.widget.ReflectionImageView
            android:id="@+id/relection_image"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>