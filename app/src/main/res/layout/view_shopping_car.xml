<?xml version="1.0" encoding="utf-8"?>
<com.horizon.android.ui.ShoppingCarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/title_height"
	    android:background="@color/main" >
	    
	    <ImageView
	        android:id="@+id/btn_left"
	        android:layout_width="@dimen/title_height"
	        android:layout_height="@dimen/title_height"
	        android:padding="@dimen/top_ico_margin"
			style="@style/repple_out_backguound"
	        android:src="@mipmap/back" />
	    
	    <ImageView 
	        android:id="@+id/btn_right1"
	        android:layout_width="@dimen/title_height"
	        android:layout_height="@dimen/title_height"
	        android:layout_alignParentRight="true"
	        android:padding="@dimen/top_ico_margin"
			style="@style/repple_out_backguound"
	        android:src="@mipmap/share" />
	    
	    <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@id/btn_left"
	        android:layout_toLeftOf="@id/btn_right1"
	        android:textColor="@color/white"
	        android:gravity="center_vertical"
	        android:text="购物车"
	        android:textSize="@dimen/large_size" />
	    
	</RelativeLayout>

	<com.horizon.android.widget.ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		android:fillViewport="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/min_margin"
			android:orientation="vertical">
			<Button
				android:id="@+id/btn_webview"
				android:layout_width="match_parent"
				android:layout_height="@dimen/title_height"
				android:text="WebView"
				android:textAllCaps="false"
				android:textSize="@dimen/normal_size" />

			<Button
				android:id="@+id/btn_clickablespan"
				android:layout_width="match_parent"
				android:layout_height="@dimen/title_height"
				android:text="Clickable Span"
				android:textAllCaps="false"
				android:textSize="@dimen/normal_size" />

			<Button
				android:id="@+id/btn_recycler_view"
				android:layout_width="match_parent"
				android:layout_height="@dimen/title_height"
				android:text="RecyclerView"
				android:textAllCaps="false"
				android:textSize="@dimen/normal_size" />

		</LinearLayout>
	</com.horizon.android.widget.ScrollView>
    
</com.horizon.android.ui.ShoppingCarView>
